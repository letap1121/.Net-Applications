<Window x:Class="DiceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dice Roll Simulator" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Height="100" Width="205">
        <Image x:Name="imgDie1" HorizontalAlignment="Left" Height="100"   Width="100"/>
        <Image x:Name="imgDie2" HorizontalAlignment="Right" Height="100"  Width="100" Margin="5,0,0,0"/>
        </StackPanel>
        <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="btnRoll" Click="btnRoll_Click" Content="Roll" Width="200" Height="50" FontSize="24"></Button>
    </Grid>
</Window>
