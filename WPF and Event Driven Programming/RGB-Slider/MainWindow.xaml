<Window x:Class="RGB_Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="600" Width="800">
    <Grid>
        <Slider HorizontalAlignment="Left" Name="sldRed" Margin="36,70,0,0" VerticalAlignment="Top" Width="291" Minimum="0" Maximum="255" Background="Red" ValueChanged="SliderValueChanged"/>
        <Slider HorizontalAlignment="Left" Name="sldGreen" Margin="36,140,0,0" VerticalAlignment="Top" Width="291" Minimum="0" Maximum="255" Background="Green" ValueChanged="SliderValueChanged"/>
        <Slider HorizontalAlignment="Left" Name="sldBlue" Margin="36,210,0,0" VerticalAlignment="Top" Width="291" Minimum="0" Maximum="255" Background="Blue" ValueChanged="SliderValueChanged"/>
        <Rectangle Name="rctColorArea" HorizontalAlignment="Left" Height="251" Margin="433,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="270"/>
    </Grid>
</Window>
